<h2>Edit Movie</h2>

<form action="/movies/{{_id}}/edit" method="post">

  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="{{title}}" />

  <label for="genre">Genre</label>
  <input type="text" name="genre" id="genre" value="{{genre}}" />

  <select name="celebrities" id="celebrities" multiple>

    {{#each celebrities}}
      <option value="cast">{{name}}</option>
    {{/each}}
  
  </select>

  <label for="plot">Plot</label>
  <input type="text" name="plot" id="plot" value="{{plot}}" />

  <button type="submit">Edit</button>

</form>